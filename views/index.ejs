<% include partials/header %>

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Resource Index.ejs</h1>
             <p>I can put more info here</p>
             <p>
                <a class="btn btn-primary btn-large" href="/resources/new">Add new resource</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% resources.forEach(function(resource) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= resource.image %>">
                   <div class="caption">
                       <h5><%= resource.name %></h5>
                   </div>
                   <p>
                       <a href="/resources/<%= resource._id %>" class="btn btn-primary">more info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>
