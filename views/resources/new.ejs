<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create a new resource</h1>


    <div style="width: 30%; margin: 23px auto;">
      <form action="/resources" method="POST" accept-charset="utf-8">
        <div class="form-group">
          <input class="form-control" type="text"  placeholder= "name" name="name" id="name"/>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder= "image" name="image" id="image"/>
        </div>
        <div class="form-group">
          <input class="form-control" type="text"  placeholder= "caption" name="caption" id="caption"/>
        </div>
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </form>
      <a href="/resources">Return</a>
    </div>


  </div>
</div>




