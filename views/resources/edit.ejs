<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit  <%=resource.name %> </h1>
    <div style="width: 30%; margin: 23px auto;">
      <form action="/resources/<%= resource._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text"   name="resource[name]" value="<%= resource.name %>"/>
        </div>
        <div class="form-group">
          <input class="form-control" type="text"  name="resource[image]" value="<%= resource.image %>"/>
        </div>
        <div class="form-group">
          <input class="form-control" type="text"  name="resource[caption]" value="<%= resource.caption %>"/>
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" value="<%= resource.location %>">
        </div>

        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </form>
      <a href="/resources">Return</a>
    </div>
  </div>
</div>




<% include ../partials/footer %>
